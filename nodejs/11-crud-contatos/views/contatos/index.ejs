<% include ../header %>
<header>
  <h2>Ntalk - Agenda de contatos</h2>
</header>
<section>
  <form action="/contato" method="post">
    <input type="text" name="contato[nome]" placeholder="Nome">
    <input type="text" name="contato[email]" placeholder="Email">
    <button type="submit" name="button">Cadastrar</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      <% contatos.forEach(function(contato, index) {%>
        <tr>
          <td><%- contato.nome %></td>
          <td><%- contato.email %></td>
          <td>
            <a href="/contato/<%- index %>">Detalhes</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
<% include ../exit %>
<% include ../footer %>
